{
    "rules": {
        "companies": {
            "$companyId": {
                ".read": "auth != null && (root.child('users').child(auth.uid).child('companyId').val() === $companyId || root.child('users').child(auth.uid).child('role').val() === 'platform_admin')",
                ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'platform_admin' || (root.child('users').child(auth.uid).child('companyId').val() === $companyId && root.child('users').child(auth.uid).child('role').val() === 'company_admin'))"
            }
        },
        "users": {
            "$userId": {
                ".read": "auth != null && (auth.uid === $userId || root.child('users').child(auth.uid).child('role').val() === 'platform_admin' || root.child('users').child(auth.uid).child('companyId').val() === data.child('companyId').val())",
                ".write": "auth != null && (auth.uid === $userId || root.child('users').child(auth.uid).child('role').val() === 'platform_admin')"
            }
        },
        "companyData": {
            "$companyId": {
                ".read": "auth != null && (root.child('users').child(auth.uid).child('companyId').val() === $companyId || root.child('users').child(auth.uid).child('role').val() === 'platform_admin')",
                ".write": "auth != null && root.child('users').child(auth.uid).child('companyId').val() === $companyId"
            }
        }
    }
}